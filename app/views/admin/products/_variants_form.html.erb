    <%= f.nested_fields_for :variants do |ff| %>
      <fieldset id="variant-fieldset-id">
  			<legend><%= Variant.model_name.human %><%= f.object.variants.find_index(ff.object).to_i + 1 %></legend>
  			<div class="form-group">
  				<%= ff.label :color %>
  				<%= ff.text_field :color, :class => "form-control" %>
  			</div>

  			<div class="form-group">
  				<%= ff.label :size %>
  				<%= ff.text_field :size, :class => "form-control" %>
  			</div>

        <div class="form-group">
          <%= ff.label :quantity %>
          <%= ff.text_field :quantity, :class => "form-control" %>
        </div>
  
  			<%= ff.fields_for :price, (ff.object.build_price unless ff.object.price) do |fff| %>
  				<div class="form-group">
  					<%= fff.label :current %>
  					<%= fff.text_field :current, :class => "form-control" %>
  				</div>
  				<div class="from-group">
  					<%= fff.label :origin %>
  					<%= fff.text_field :origin, :class => "form-control" %>
  				</div>
  			<% end %>
        <br>
        <%= ff.remove_nested_fields_link "移除产品规格", :class => "btn btn-danger" %>
      </fieldset>
      <br>
  		
  	<% end %>
  	<p class="text-right">
  		<%= f.add_nested_fields_link :variants, "新增产品规格", :class => "btn btn-default", :id => "variant-add-button" %>
  	</p>

